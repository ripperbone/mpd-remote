#!/bin/bash

pushd `dirname ${BASH_SOURCE[0]}`


echo "----------------------------------------------"
echo "              STARTING MPD REMOTE             "
echo "                                              "
echo "   PATH ${PATH}                               "
echo "   BUNDLE: $(which bundle)                    "
echo "----------------------------------------------"


bundle exec rackup -o 0.0.0.0 -p 8003

#echo "Start in development mode!"
#rerun 'rackup -o 0.0.0.0 -p 8003'
popd
